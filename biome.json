{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off",
                "noUnusedTemplateLiteral": "warn",
                "useImportType": "off",
                "useExportType": "off"
            }
        },
        "ignore": ["dist/**", "*.js", "*.cjs", "*.mjs", "*.spec.ts"]
    },
    "files": {
        "ignore": ["dist/**", "*.js", "*.cjs", "*.mjs", "*.spec.ts"]
    }
}
